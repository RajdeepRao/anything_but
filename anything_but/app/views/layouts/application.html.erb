<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <ul class="breadcrumb">
    <li id="home-link-div"><a href="/" id="home-link"> Anything But </a></li>
    <% if !logged_in? %>
      <li><a href="/signin">Sign In</a></li>
      <li><a href="/signup">Sign Up</a></li>
    <% end %>
    <% if logged_in? %>
      <li><%= link_to current_user.username, dashboard_path %></a></li>
      <li><%= link_to "Log Out", signout_path %></a></li>
    <% end %>
  </ul>
    <%= yield %>
  </body>
</html>
